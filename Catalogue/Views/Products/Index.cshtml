@model IEnumerable<Catalogue.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Old.cshtml";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("New", "New", null, new { @class = "btn btn-primary pull-right" })
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastModified)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
            </tr>
        }
    </tbody>

</table>
